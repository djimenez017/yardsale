<div class="field column is-half is-offset-one-half mx-auto">
  <label class="label has-text-centered"
    >Search Yard sales by City or Zip Code</label
  >
  <div class="control is-flex is-flex-direction-row">
    <input class="input" type="text" placeholder="Los Angeles" />
    <button class="button is-primary is-fullwidth">Search</button>
  </div>
</div>

<% @yard_sales.each do |yard_sale| %>

<div class="card column is-three-quarters-tablet mx-auto my-5">
  <div class="columns">
    <div class="column is-4">
      <div class="card-image">
        <figure class="image is-4by3">
          <img
            src="https://bulma.io/images/placeholders/1280x960.png"
            alt="Placeholder image"
          />
        </figure>
      </div>
    </div>
    <div class="column is-8">
      <div class="card-content p-0">
        <div class="media">
          <div class="media-content">
            <p class="title is-4 m-0">Yard Sale!</p>
            <time class="p-0" datetime="2016-1-1"> 1 Jan 2016, 07:00am</time>
          </div>
        </div>
        <div class="content">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus nec
          iaculis mauris.
          <br />
          <br />
          <div>
            <span class="tag is-primary">Collectibles</span>
            <span class="tag is-primary">Clothing</span>
            <span class="tag is-primary">Electronics</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%end%>
